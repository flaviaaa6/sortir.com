{% extends 'base.html.twig' %}

{% block title %}Sortir.com{% endblock %}

{% block body %}
    <h2>Profil</h2>

    {% if app.user %}
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.telephone }}</td>
                </tr>
            </tbody>
        </table>
        {% if app.user.id == participant.id %}
            <a href="{{ path('profil_modif', {'id': app.user.id}) }}"><button type="button" class="btn btn-dark">Modifier</button></a>
        {% endif %}
    {% endif %}

{% endblock %}
